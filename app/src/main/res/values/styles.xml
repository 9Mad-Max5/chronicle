<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:radioButtonStyle">@style/Option</item>
        <item name="radioButtonStyle">@style/Option</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Option" parent="TextAppearance.Body1">
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="background">@drawable/option_background</item>
        <item name="android:background">@drawable/option_background</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextAppearance.SectionHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextAppearance.Subtitle.Settings" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.RoundedRectInput" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">@dimen/rounded_input_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/rounded_input_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/rounded_input_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/rounded_input_padding_vertical</item>
        <item name="android:background">@drawable/rounded_rect_form</item>
        <item name="android:minEms">15</item>
    </style>

    <!-- Searchbar style courtesy of: https://stackoverflow.com/questions/30369246/implementing-searchview-as-per-the-material-design-guidelines -->
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="layout">@layout/toolbar_search_view</item>
        <item name="colorControlNormal">@color/material_light_active_icon</item>
        <item name="colorControlHighlight">@color/material_ripple_light</item>
        <item name="android:maxWidth">9999dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="fontWeight">400</item>
        <item name="fontFamily">@font/lato</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

</resources>
